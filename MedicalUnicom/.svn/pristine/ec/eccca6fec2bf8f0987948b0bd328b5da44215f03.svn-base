@charset "utf-8";
#header .head {background:#5caafc;padding:1rem 0 0.5rem;}
#header .head p.log_text{padding:0 0 0.5rem;text-align:center}
#header .head p.log_text img{width:5rem}
#header .head p.user_img{text-align:center}
#header .head #user img{width:2.5rem}

.privacy {position:absolute;bottom:0.5rem;width:100%;text-align:center;font-size:0.4rem;}
.privacy a,
.privacy a:hover{text-decoration:none;color:#5da1eb;font-size:0.4rem}

.login_form{position:relative;padding:0 0 4rem}
.login_form .login {margin:0 auto;padding:0.5rem 1rem;background:#fff}
.login_form .login .login_id{padding:0 0 0.5rem;border-bottom:1px solid #b9b9b9}
.login_form .login .login_pw{padding:0.5rem 0 0 0;}
.login_form .login .icon{float:left;width:0.8rem;height:0.8rem}
.login_form .login .id_icon{background:url("../img/id_icon.jpg") no-repeat 0 0;background-size:100% 100%;}
.login_form .login .pw_icon{background:url("../img/pw_icon.jpg") no-repeat 0 0;background-size:100% 100%;}

.login_form .login .date{padding:0 1rem;}
.login_form .login .date input{width:100%;height:0.8rem;font-size:0.4rem;border:0}

.login_form .btnArea{padding:0.5rem 0 0 0;text-align:center;border-top:1px solid #b9b9b9}
.login_form .btnArea  button{width:8rem;height:1.2rem;border-radius:5px;background:#50d071;color:#fff;font-size:0.5rem;}

.login_form .join_forgot {width:80%;margin:1rem auto 0;}
.login_form .join_forgot a,
.login_form .join_forgot a:hover{text-decoration:none;color:#5da1eb;font-size:0.4rem;}

